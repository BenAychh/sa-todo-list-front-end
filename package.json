{
  "name": "sa-todo-list-front-end",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration=production --no-progress",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless --codeCoverage --progress=false",
    "lint": "ng lint --type-check",
    "e2e": "testcafe firefox ./test-cafe/",
    "e2e:ci": "testcafe 'chromium --no-sandbox' ./test-cafe/ --baseUrl=http://localhost:4201/",
    "format:fix": "pretty-quick --staged",
    "checkCompile": "tsc --noEmit --skipLibCheck"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.0.0",
    "@angular/common": "~7.0.0",
    "@angular/compiler": "~7.0.0",
    "@angular/core": "~7.0.0",
    "@angular/forms": "~7.0.0",
    "@angular/http": "~7.0.0",
    "@angular/platform-browser": "~7.0.0",
    "@angular/platform-browser-dynamic": "~7.0.0",
    "@angular/router": "~7.0.0",
    "core-js": "^2.5.4",
    "rxjs": "~6.3.3",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.10.0",
    "@angular/cli": "~7.0.6",
    "@angular/compiler-cli": "~7.0.0",
    "@angular/language-service": "~7.0.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/minimist": "^1.2.0",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "husky": "^1.3.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "minimist": "^1.2.0",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "protractor": "~5.4.0",
    "rxjs-tslint-rules": "^4.14.3",
    "testcafe": "^0.23.3",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-etc": "^1.2.12",
    "typescript": "~3.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format:fix && yarn lint && yarn checkCompile",
      "pre-push": "yarn build:prod && yarn test:ci && yarn e2e"
    }
  }
}
